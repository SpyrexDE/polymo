<div class="bg-base-100 rounded-box col-span-3 row-span-3 mx-2 grid w-72 flex-shrink-0 place-items-center items-center gap-4 p-4 py-8 shadow-xl xl:mx-0 svelte-1n6ue57">
    <div class="dropdown">
        <div class="online avatar">
            <div class="mask mask-squircle h-24 w-24 bg-opacity-10 p-px"><img
                    src="https://avatars.dicebear.com/api/personas/<%= profile.avatar_seed %>.svg" width="94" height="94"
                    alt="Avatar Tailwind CSS Component" class="mask mask-squircle"></div>
        </div>
    </div>
    <div>
        <div class="dropdown w-full">
            <div class="text-center">
                <div class="text-lg font-extrabold"><%= profile.username %></div>
                <div class="text-base-content/70 my-3 text-sm"><%= profile.email %>
                    <br>
                    Global Illustration Observer
                    <br>
                    Business Alignment Developer
                </div>
            </div>
        </div>
        <div class="dropdown w-full">
            <div class="mt-2 text-center">
                <div class="badge badge-ghost">Design</div>
                <div class="badge badge-ghost">Art</div>
                <div class="badge badge-ghost">Illustration</div>
            </div>
        </div>
    </div>
    <div class="dropdown dropdown-top">
        <div class="btn-group"><button class="btn btn-accent btn-sm">Follow</button>
            <%= button_to reroll_avatar_path(profile), class: "btn btn-accent btn-square btn-sm", form: { data: {
                turbo_method: :post,
                turbo_confirm: "Are you sure you want to get a new avatar? Your old one will be lost."
              }} do %>
                <svg
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z">
                    </path>
                </svg><% end %></div>
    </div>
</div>