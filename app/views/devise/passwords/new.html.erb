<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class =>  "card glass p-10 w-96 m-auto"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h3 class="text-5xl"><strong>Restore Password</strong></h3>
  <div class="field form-control w-full my-5">
    <label class="label">
      <%= f.label :email  %>
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <div class="form-control w-full flex my-2">
    <%= f.submit "Send Instructions", class: "btn w-40 m-auto"%>
  </div>
  <%= render "devise/shared/links" %>
<% end %>